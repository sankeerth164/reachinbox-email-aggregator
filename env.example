# Server Configuration
PORT=3000
NODE_ENV=development

# IMAP Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SECURE=true

# Email Accounts (comma-separated)
EMAIL_ACCOUNTS=user1@gmail.com,user2@outlook.com
EMAIL_PASSWORDS=password1,password2

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=emails

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Configuration (for vector database)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=email-vectors

# Slack Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Webhook Configuration
WEBHOOK_URL=https://webhook.site/your_webhook_id

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
